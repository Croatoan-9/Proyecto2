<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="layout.mimascota">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondo_corazones">

            <TextView
                android:id="@+id/TVJacobo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TV_Jacobo"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textColor="@color/colr_name"
                android:layout_marginTop="192dp"
                android:layout_alignTop="@+id/CIJacobo"
                android:layout_centerHorizontal="true" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/CIJacobo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/jacobo"
                android:layout_centerHorizontal="true"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="10"
                app:civ_shadow_color="#8BC34A"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="267dp"
        android:id="@+id/RVMiMascota"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>


