<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CVMimascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/tamano_CVmargen"
    android:layout_marginLeft="@dimen/tamano_CVmargen"
    android:layout_marginTop="@dimen/tamano_CVmargen"
    card_view:cardCornerRadius="@dimen/cornerradius_cv">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorCardview">

        <ImageView
            android:id="@+id/IMGJacobo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/perro1"
            android:scaleType="fitXY">

        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp">


            <ImageView
                android:id="@+id/IVhueso5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dog_bone_filled_50"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/TVmegustas1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/megustas"
                android:textSize="@dimen/tamano_TVnombre"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/IVhueso5"
                android:layout_alignEnd="@+id/IVhueso5" />


        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
